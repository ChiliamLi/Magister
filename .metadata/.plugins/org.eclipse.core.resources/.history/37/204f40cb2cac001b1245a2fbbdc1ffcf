package hw5;

public class BFS {
    
    private BFS() {};
    
    public static int[] doBFS1(Graph g, int s) {
        ResizingDequeImpl<Integer> q;
        boolean[] discovered;
        int[] parent;
        
        discovered = new boolean[g.getSize()];
        parent = new int[g.getSize()];
        
        for (int i = 0; i < g.getSize(); i++) {
            discovered[i] = false;
            parent[i] = -1;
        }
        
        q = new ResizingDequeImpl<>();
        q.addLast(s);
        discovered[s] = true;
        
        while (q.size() > 0) {
            int v = q.pollFirst();
            for (int u : g.outNeighbors(v)) {
                if (!discovered[u]) {
                    discovered[u] = true;
                    q.addLast(u);
                    parent[u] = v;
                }
            }
        }
        
        return parent;
    }
    
    public static boolean[] doBFS2(Graph g, int s) {
        ResizingDequeImpl<Integer> q;
        boolean[] discovered;
        int[] parent;
        
        discovered = new boolean[g.getSize()];
        parent = new int[g.getSize()];
        
        for (int i = 0; i < g.getSize(); i++) {
            discovered[i] = false;
            parent[i] = -1;
        }
        
        q = new ResizingDequeImpl<>();
        q.addLast(s);
        discovered[s] = true;
        
        while (q.size() > 0) {
            int v = q.pollFirst();
            for (int u : g.outNeighbors(v)) {
                if (!discovered[u]) {
                    discovered[u] = true;
                    q.addLast(u);
                    parent[u] = v;
                }
            }
        }
        
        return discovered;
    }   
}